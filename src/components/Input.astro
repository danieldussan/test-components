---
interface InputProps {
  type: string;
  variant: "primary"; // You can define different variants .
  name: string;
  placeholder: string;
  className?: string;
  id?: string;
}

const { type, variant, name, placeholder, className, id } = Astro.props;

const variants = {
  primary:
    "rounded-md py-4  p-2 max-w-max text-center mb-5 md:mb-[0px] mx-1 md:py-2 md:max-w-40 lg:max-w-56 xl:max-w-64 xl:text-lg focus:ring-blue-500 border-none font-light",
};
---

<div class="flex flex-col">
  <slot name = "before" />
    <input
      class={`${variants[variant as keyof typeof variants]} ${className}`}
      type={type}
      name={name}
      placeholder={placeholder}
      id={id}
    />
  <slot name = "after" />
</div>
